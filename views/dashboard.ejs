<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard -Gestion des Budget</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f8f9fa; }
        .sidebar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
        .sidebar .nav-link { color: white; padding: 15px 20px; border-radius: 10px; margin: 5px 0; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background: rgba(255,255,255,0.2); color: white; }
        .card { border: none; border-radius: 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .card-header { background: linear-gradient(45deg, #667eea, #764ba2); color: white; border-radius: 15px 15px 0 0 !important; }
        .btn-primary { background: linear-gradient(45deg, #667eea, #764ba2); border: none; }
        .progress { height: 10px; border-radius: 10px; }
        .stat-card { transition: transform 0.3s; }
        .stat-card:hover { transform: translateY(-5px); }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-4">
                    <h4 class="text-white mb-4"><i class="fas fa-wallet me-2"></i>Gestion des budgets</h4>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="/users/dashboard"><i class="fas fa-tachometer-alt me-2"></i> dashboard</a>
                        <a class="nav-link" href="#profile"><i class="fas fa-user me-2"></i>Profile</a>
                        <a class="nav-link" href="/transactions"><i class="fas fa-exchange-alt me-2"></i>Transactions</a>
                        <a class="nav-link" href="/categories"><i class="fas fa-chart-pie me-2"></i>Categories</a>
                        <a class="nav-link" href="/budgets"><i class="fas fa-chart-pie me-2"></i>Budgets</a>
                        <a class="nav-link" href="#objectives"><i class="fas fa-bullseye me-2"></i> Goals</a>
                        <a class="nav-link" href="/users/logout"><i class="fas fa-sign-out-alt me-2"></i>LogOut </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-4">
                <!-- Dashboard Section -->
                <div id="dashboard">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>  bienvenue sur votre dashboard <i class="text-success"><%= user.name %></i>  </h2>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTransactionModal">
                            <i class="fas fa-plus me-2"></i> ajouter une transaction
                        </button>
                    </div>

                    <!-- Stats Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card text-center">
                                <div class="card-body">
                                    <i class="fas fa-wallet fa-2x text-primary mb-2"></i>
                                    <h5>le solde actuel </h5>
                                    <h3 class="text-success">15,500 MAD</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card text-center">
                                <div class="card-body">
                                    <i class="fas fa-arrow-up fa-2x text-success mb-2"></i>
                                    <h5>les revenus mensuels </h5>
                                    <h3 class="text-success">8,200 MAD</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card text-center">
                                <div class="card-body">
                                    <i class="fas fa-arrow-down fa-2x text-danger mb-2"></i>
                                    <h5>les dépenses mensuelles </h5>
                                    <h3 class="text-danger">5,800 MAD</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card text-center">
                                <div class="card-body">
                                    <i class="fas fa-chart-line fa-2x text-info mb-2"></i>
                                    <h5> l’épargne mensuelle</h5>
                                    <h3 class="text-info">2,400 MAD</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                   

                    <!-- Budget Progress -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i> suivit l budget</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <h6>food</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-success" style="width: 65%"></div>
                                    </div>
                                    <small>1,300 / 2,000 MAD</small>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <h6>transport</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-warning" style="width: 85%"></div>
                                    </div>
                                    <small>680 / 800 MAD</small>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <h6>housing</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-info" style="width: 45%"></div>
                                    </div>
                                    <small>1,350 / 3,000 MAD</small>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <h6>housing</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar bg-info" style="width: 45%"></div>
                                    </div>
                                    <small>1,350 / 3,000 MAD</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Transactions -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-history me-2"></i> derniers transactions</h5>
                            <a href="#transactions" class="btn btn-sm btn-outline-light">tous</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>description</th>
                                            <th>category</th>
                                            <th>le montant</th>
                                            <th>type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%transactions.forEach( transaction =>{   %>
                                        <tr>
                                            <td><%= transaction.date %></td>
                                            <td><%= transaction.description %> </td>
                                            <td><%= transaction.Category.name %></td>
                                            <td class="text-success"><%= transaction.montant %></td>
                                            <td><span class="badge bg-success"><%= transaction.type %></span></td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Transaction Modal -->
    <div class="modal fade" id="addTransactionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajouter une Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/transactions/create">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Montant</label>
                            <input type="number" name="montant" class="form-control" step="0.01" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select" required>
                                <option value="">Choisir</option>
                                <option value="depense">Dépense</option>
                                <option value="revenu">Revenu</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Catégorie</label>
                            <select name="categoryId" class="form-select" required>
                                <option value="">Choisir</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" name="description" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" name="date" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   

   

        
    
</body>
</html>