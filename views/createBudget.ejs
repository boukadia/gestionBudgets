<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer Budget - Gestion des Budget</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f8f9fa; }
        .sidebar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
        .sidebar .nav-link { color: white; padding: 15px 20px; border-radius: 10px; margin: 5px 0; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background: rgba(255,255,255,0.2); color: white; }
        .card { border: none; border-radius: 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .card-header { background: linear-gradient(45deg, #667eea, #764ba2); color: white; border-radius: 15px 15px 0 0 !important; }
        .btn-primary { background: linear-gradient(45deg, #667eea, #764ba2); border: none; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-4">
                    <h4 class="text-white mb-4"><i class="fas fa-wallet me-2"></i>Gestion des budgets</h4>
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/users/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a class="nav-link" href="#profile"><i class="fas fa-user me-2"></i>Profile</a>
                        <a class="nav-link" href="/transactions"><i class="fas fa-exchange-alt me-2"></i>Transactions</a>
                        <a class="nav-link active" href="/budgets"><i class="fas fa-chart-pie me-2"></i>Budgets</a>
                        <a class="nav-link" href="#objectives"><i class="fas fa-bullseye me-2"></i>Goals</a>
                        <a class="nav-link" href="/users/logout"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-plus me-2"></i>Créer un Nouveau Budget</h2>
                    <a href="/budgets" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Informations du Budget</h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/budgets/create">
                                    <div class="mb-3">
                                        <label for="category" class="form-label">Catégorie</label>
                                        <select name="categoryId" id="category" class="form-select" required>
                                            <option value="">Choisir une catégorie</option>
                                            <% categories.forEach(category => { %>
                                            <option value="<%= category.id %>"><%= category.name%></option>
                                           <% })%>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="limit" class="form-label">Limite du Budget (MAD)</label>
                                        <input type="number" name="limit" id="limit" class="form-control" step="0.01" min="0" required>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="month" class="form-label">Mois</label>
                                            <select name="month" id="month" class="form-select" required>
                                                <option value="">Choisir un mois</option>
                                                <option value="1">Janvier</option>
                                                <option value="2">Février</option>
                                                <option value="3">Mars</option>
                                                <option value="4">Avril</option>
                                                <option value="5">Mai</option>
                                                <option value="6">Juin</option>
                                                <option value="7">Juillet</option>
                                                <option value="8">Août</option>
                                                <option value="9">Septembre</option>
                                                <option value="10">Octobre</option>
                                                <option value="11">Novembre</option>
                                                <option value="12">Décembre</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="year" class="form-label">Année</label>
                                            <select name="year" id="year" class="form-select" required>
                                                <option value="">Choisir une année</option>
                                                <% for(let year = new Date().getFullYear(); year <= new Date().getFullYear() + 2; year++) { %>
                                                    <option value="<%= year %>" <%= year === new Date().getFullYear() ? 'selected' : '' %>><%= year %></option>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a href="/budgets" class="btn btn-secondary me-md-2">Annuler</a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>Créer le Budget
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('month').value = new Date().getMonth() + 1;
    </script>
</body>
</html>