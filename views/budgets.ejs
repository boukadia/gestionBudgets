<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budgets - Gestion des Budget</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f8f9fa; }
        .sidebar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
        .sidebar .nav-link { color: white; padding: 15px 20px; border-radius: 10px; margin: 5px 0; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background: rgba(255,255,255,0.2); color: white; }
        .card { border: none; border-radius: 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .card-header { background: linear-gradient(45deg, #667eea, #764ba2); color: white; border-radius: 15px 15px 0 0 !important; }
        .btn-primary { background: linear-gradient(45deg, #667eea, #764ba2); border: none; }
        .budget-card { transition: transform 0.3s; }
        .budget-card:hover { transform: translateY(-5px); }
        .card-body{max-height: 260px;min-height: 200px;}
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-4">
                    <h4 class="text-white mb-4"><i class="fas fa-wallet me-2"></i>Gestion des budgets</h4>
                    <nav class="nav flex-column">
                       <a class="nav-link" href="/users/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a class="nav-link" href="#profile"><i class="fas fa-user me-2"></i>Profile</a>
                        <a class="nav-link" href="/transactions"><i class="fas fa-exchange-alt me-2"></i>Transactions</a>
                        <a class="nav-link" href="/categories"><i class="fas fa-tags me-2"></i>Catégories</a>
                        <a class="nav-link" href="/budgets"><i class="fas fa-chart-pie me-2"></i>Budgets</a>
                        <a class="nav-link " href="/saving-goals"><i class="fas fa-bullseye me-2"></i>Objectifs</a>
                        <a class="nav-link" href="/users/logout"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-chart-pie me-2"></i>Mes Budgets</h2>
                    <a href="/budgets/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nouveau Budget
                    </a>
                </div>

                <% if (budgets.length === 0) { %>
                    <div class="card text-center">
                        <div class="card-body py-5">
                            <i class="fas fa-chart-pie fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">Aucun budget trouvé</h4>
                            <p class="text-muted">Commencez par créer votre premier budget</p>
                            <a href="/budgets/create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer un Budget
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% budgets.forEach(budget => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card budget-card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0"><%= budget.Category.name %></h5>
                                        
                                        <!-- <h5 class="mb-0"><%= budget.Category.name %></h5> -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="POST" action="/budgets/delete/<%= budget.id %>?_method=DELETE" class="d-inline">
                                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce budget?')">
                                                            <i class="fas fa-trash me-2"></i>Supprimer
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <h6 class="text-muted">Limite</h6>
                                                <h4 class="text-primary"><%= budget.limit.toLocaleString() %> MAD</h4>
                                            </div>
                                            <div class="col-6">
                                                <h6 class="text-muted">Période</h6>
                                                <h4 class="text-info">
                                                    <%= new Date(budget.year, budget.month - 1).toLocaleDateString('fr-FR', { month: 'long', year: 'numeric' }) %>
                                                </h4>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Créé le <%= new Date(budget.createdAt).toLocaleDateString('fr-FR') %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>