<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transactions - Gestion Budget</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f8f9fa;
      }
      .sidebar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }
      .sidebar .nav-link {
        color: white;
        padding: 15px 20px;
        border-radius: 10px;
        margin: 5px 0;
      }
      .sidebar .nav-link:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
      }
      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .card-header {
        background: linear-gradient(45deg, #667eea, #764ba2);
        color: white;
        border-radius: 15px 15px 0 0 !important;
      }
      .btn-primary {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 sidebar p-0">
          <div class="p-4">
            <h4 class="text-white mb-4">
              <i class="fas fa-wallet me-2"></i>Gestion Budget
            </h4>
            <nav class="nav flex-column">
              <a class="nav-link" href="/users/dashboard"
                ><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a
              >
              <a class="nav-link" href="/profile"
                ><i class="fas fa-user me-2"></i>Profile</a
              >
              <a
                class="nav-link"
                href="/transactions"
                style="background: rgba(255, 255, 255, 0.2)"
                ><i class="fas fa-exchange-alt me-2"></i>Transactions</a
              >
              <a class="nav-link" href="/budgets"
                ><i class="fas fa-chart-pie me-2"></i>Budgets</a
              >
              <a class="nav-link" href="/users/logout"
                ><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a
              >
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-exchange-alt me-2"></i>Mes Transactions</h2>
            <button
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#addTransactionModal"
            >
              <i class="fas fa-plus me-2"></i>Nouvelle Transaction
            </button>
          </div>

          <!-- Transactions Table -->
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Liste des Transactions
              </h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Description</th>
                      <th>Catégorie</th>
                      <th>Type</th>
                      <th>Montant</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (transactions && transactions.length > 0) { %> <%
                    transactions.forEach(transaction => { %>
                    <tr>
                      <td>
                        <%= new
                        Date(transaction.date).toLocaleDateString('fr-FR') %>
                      </td>
                      <td>
                        <%= transaction.description || 'Sans description' %>
                      </td>
                      <td>
                        <%= transaction.Category ? transaction.Category.name :
                        'N/A' %>
                      </td>
                      <td>
                        <span
                          class="badge <%= transaction.type === 'revenu' ? 'bg-success' : 'bg-danger' %>"
                        >
                          <%= transaction.type === 'revenu' ? 'Revenu' :
                          'Dépense' %>
                        </span>
                      </td>
                      <td
                        class="<%= transaction.type === 'revenu' ? 'text-success' : 'text-danger' %>"
                      >
                        <%= transaction.type === 'revenu' ? '+' : '-' %><%=
                        transaction.montant %> MAD
                      </td>
                      <td>
                        <form
                          method="POST"
                          action="/transactions/delete/<%= transaction.id %>?_method=DELETE"
                          style="display: inline"
                        >
                          <button
                            type="submit"
                            class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Êtes-vous sûr?')"
                          >
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                        <form
                          method="GET"
                          action="/transactions/edit/<%= transaction.id %>"
                          data-id="<%= transaction.id %>"
                          data-type="<%= transaction.type %>"
                          data-description="<%= transaction.description || '' %>"
                          data-montant="<%= transaction.montant %>"
                          data-category-id="<%= transaction.categoryId %>"
                          data-category="<%= transaction.Category.name %>"
                          data-bs-toggle="modal"
                          data-bs-target="#addTransactionModal"
                          style="display: inline"
                        >
                          <button
                            type="submit"
                            class="btn btn-sm btn-outline-primary"
                          >
                            <i class="fas fa-edit"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }) %> <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center text-muted">
                        Aucune transaction trouvée
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Transaction Modal -->
    <div class="modal fade" id="addTransactionModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Ajouter une Transaction</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <form method="POST" action="/transactions/create">
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Montant</label>
                <input
                  type="number"
                  name="montant"
                  class="form-control"
                  step="0.01"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Type</label>
                <select name="type" class="form-select" required>
                  <option value="">Choisir</option>
                  <option value="depense">Dépense</option>
                  <option value="revenu">Revenu</option>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">Catégorie</label>
                <select name="categoryId" class="form-select" required>
                  <option value="">Choisir</option>
                  <% categories.forEach(category => { %>
                  <option value="<%= category.id %>">
                    <%= category.name %>
                  </option>
                  <% }) %>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" name="description" class="form-control" />
              </div>
              <div class="mb-3">
                <label class="form-label">Date</label>
                <input type="date" name="date" class="form-control" required />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Annuler
              </button>
              <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const editForms = document.querySelectorAll(
          'form[action^="/transactions/edit"]'
        );

        editForms.forEach((form) => {
          form.addEventListener("submit", (e) => {
            e.preventDefault();


            const type = form.dataset.type;
            const description = form.dataset.description;
            const montant = form.dataset.montant;
            const categoryId = form.dataset.categoryId;
            const category = form.dataset.category;
            //   const date = form.dataset.date;
            const id = form.dataset.id;

            console.log(type, description, category, montant, categoryId);

            const modal = document.getElementById("addTransactionModal");

            modal.querySelector('select[name="type"]').value = type;
            modal.querySelector('input[name="description"]').value =description;
            modal.querySelector('input[name="montant"]').value = montant;
            modal.querySelector('select[name="categoryId"]').value = categoryId;
            const formm = modal.querySelector('form');

            formm.action = `/transactions/edit/${id}?_method=PUT`;

          
          });
        });
      });
    </script>
  </body>
</html>
